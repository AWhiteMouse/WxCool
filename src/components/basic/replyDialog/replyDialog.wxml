        <view class="wx-circle">
            <image class="wx-img" src="{{imgUrl}}"></image>
        </view>
        <view class="wx-x" bindtap="cancel">×</view>
        <view class="wx-popup-con">回复“1”即可加入学习群</view>
        <button class="wx-popup-btn" bindtap="next" open-type="contact">立即回复</button>
        <view class="wx-popup-tip">95%的同学选择加入学习群</view>
    </view>
</view>